@model dotnet.FHIR.commons.ClientApp

@{
    ViewData["Title"] = "Auth";
}

<h2>Auth</h2>

<h4>ClientApp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Auth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientAppID" class="control-label"></label>
                <input asp-for="ClientAppID" class="form-control" />
                <span asp-validation-for="ClientAppID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Secret" class="control-label"></label>
                <input asp-for="Secret" class="form-control" />
                <span asp-validation-for="Secret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
